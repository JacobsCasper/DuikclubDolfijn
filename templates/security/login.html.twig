{% extends 'base.html.twig' %}

{% block body %}

    <form action="{{ path('login') }}" method="post">
        <fieldset>
            <legend>Login</legend>
            <div class="form-group">
                <label for="username">Username</label>
                <input type="text" name="_username" value="{{ last_username }}" class="form-control" id="username" aria-describedby="emailHelp" placeholder="Enter username">
            </div>
            <div class="form-group">
                <label for="password">Password</label>
                <input type="password" name="_password" class="form-control" id="password" placeholder="Password">
            </div>
            {% if error %}
                <p class="text-danger"><small>{{ error.messageKey }} Please try again.</small></p>
            {% endif %}
            <button type="submit" class="btn btn-primary">Login</button>
        </fieldset>
    </form>

{% endblock %}
