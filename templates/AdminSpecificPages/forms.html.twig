{% extends 'base.html.twig' %}

{% block body %}

    {% if forms %}
        <table class="table table-hover">
            <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Titel</th>
                {% if is_granted('ROLE_ADMIN') %}
                    <th scope="col">Delete</th>
                {% endif %}
                {% if is_granted('ROLE_ADMIN') %}
                    <th scope="col">Edit</th>
                {% endif %}
            </tr>
            </thead>
            <tbody>
            {% for form in forms %}
                <tr>
                    <td>{{ form.id }}</td>
                    <td>{{ form.title }}</td>
                    {% if is_granted('ROLE_ADMIN') %}
                        <td><a class="btn btn-danger" href="#">delete</a></td>
                    {% endif %}
                    {% if is_granted('ROLE_ADMIN') %}
                        <td><a class="btn btn-warning" href="{{ path('editForm', {'id': form.id}) }}">edit</a></td>
                    {% endif %}
                </tr>
            {% endfor %}
            </tbody>
        </table>
    {% endif %}
    <div style="display: flex; justify-content: center; align-items: center;">
        {{ knp_pagination_render(forms) }}
    </div>

    <div class="container">
        <div class="row">
            <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
                <div class="card card-signin my-5">
                    <div class="card-body">
                        <h5 class="card-title text-center">Nieuw form aanmaken</h5>
                        {% if is_granted('ROLE_ADMIN') %}
                            {{ form_start(form) }}
                            {{ form_widget(form) }}
                            {{ form_end(form) }}
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}

{% endblock %}