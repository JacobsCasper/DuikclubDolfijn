{% extends 'base.html.twig' %}

{% block body %}
    {% if is_granted('ROLE_ADMIN') %}
        <div class="text-center mb-3">
            <a class="btn btn-primary" href="{{ path('addStringElement', {'id': currentForm.id}) }}">Text</a>
        </div>
    {% endif %}
    {% if formElements %}
        <table class="table table-hover">
            <thead>
            <tr>
                <th scope="col">id</th>
                <th scope="col">formID</th>
                <th scope="col">Label</th>
                <th scope="col">Type</th>
                {% if is_granted('ROLE_ADMIN') %}
                    <th scope="col">Delete</th>
                {% endif %}
                {% if is_granted('ROLE_ADMIN') %}
                    <th scope="col">Edit</th>
                {% endif %}
            </tr>
            </thead>
            <tbody>
            {% for element in formElements %}
                <tr>
                    <td>{{ element.id }}</td>
                    <td>{{ element.parentId }}</td>
                    <td>{{ element.label }}</td>
                    <td>{{ element.type }}</td>
                    {% if is_granted('ROLE_ADMIN') %}
                        <td><a class="btn btn-danger" href="#">delete</a></td>
                    {% endif %}
                    {% if is_granted('ROLE_ADMIN') %}
                        <td><a class="btn btn-warning" href="#">edit</a></td>
                    {% endif %}
                </tr>
            {% endfor %}
            </tbody>
        </table>
    {% endif %}
{% endblock %}

{% block javascripts %}

{% endblock %}