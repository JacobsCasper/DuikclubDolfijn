{% extends 'base.html.twig' %}

{% block body %}
    <div class="text-center mb-3">
        <a class="btn btn-primary" href="/page/add">
            <i class="fas fa-plus"></i>&nbsp;&nbsp;
            Pagina toevoegen</a>
    </div>
    {% if allPages is defined %}
<table class="table table-hover">
    <thead>
    <tr>
        <th scope="col">Id</th>
        <th scope="col">Titel</th>
        <th scope="col">Gepubliceerd</th>
        <th scope="col">Manage files</th>
        <th scope="col">Edit</th>
        <th scope="col">Delete</th>
    </tr>
    </thead>
    <tbody>
        {% for item in allPages %}
        <tr>
            <th scope="row">{{ item.id }}</th>
            <th scope="row">{{ item.title }}</th>
            {% if item.published %}
                <th scope="row">
                    <span class="badge badge-pill badge-success">gepubliceerd</span>
                </th>
            {% else %}
                <th scope="row">
                    <span class="badge badge-pill badge-danger">niet gepubliceerd</span>
                </th>
            {% endif %}
            <td><a class="btn btn-info" href="{{ path('getPageFiles', {'id': item.id}) }}">
                    <i class="fas fa-tasks"></i>&nbsp;&nbsp;
                    Manage
                </a></td>
            <td><a class="btn btn-warning" href="/page/edit/{{ item.id }}">
                    <i class="fas fa-edit"></i>&nbsp;&nbsp;
                    Edit
                </a></td>
            <td><a class="btn btn-danger" href="/page/remove/{{ item.id }}">
                    <i class="fas fa-trash"></i>&nbsp;&nbsp;
                    Delete
                </a></td>
        </tr>
        {% endfor %}
    </tbody>
</table>
    {% endif %}
<div style="display: flex; justify-content: center; align-items: center;">
    {{ knp_pagination_render(allPages) }}
</div>
{% endblock %}

{% block javascripts %}

{% endblock %}